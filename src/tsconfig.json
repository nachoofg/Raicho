{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "../dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"#utils/*": [
				"lib/util/*"
			],
			"#lib/*": [
				"lib/*"
			],
			"#api/*": [
				"api/*"
			],
			"#root/*": [
				"*"
			]
		},
		"verbatimModuleSyntax": true,
		"module": "NodeNext",
		"composite": true,
		"ignoreDeprecations": "5.0",
	},
	"include": [
		".",
		"./**/*.json"
	],
	"exclude": [
		"./tsconfig.json",
		"node_modules"
	]
}